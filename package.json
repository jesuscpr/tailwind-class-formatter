{
  "name": "tailwind-class-formatter",
  "displayName": "Tailwind Class Formatter",
  "description": "Tailwind CSS Class Formatter",
  "version": "0.0.3",
  "publisher": "jesuscpr",
  "author": {
    "name": "Jes√∫s"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jesuscpr/tailwind-class-formatter"
  },
  "bugs": {
    "url": "https://github.com/jesuscpr/tailwind-class-formatter/issues"
  },
  "homepage": "https://github.com/jesuscpr/tailwind-class-formatter#readme",
  "icon": "./tailwind-formatter-icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "tailwind",
    "formatter",
    "classes",
    "class",
    "css",
    "react",
    "jsx",
    "tsx",
    "tailwindcss",
    "formatting"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-formatter.format",
        "title": "Format Tailwind CSS Classes"
      }
    ],
    "configuration": {
      "title": "Tailwind Class Formatter",
      "properties": {
        "tailwindFormatter.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format Tailwind classes when saving"
        },
        "tailwindFormatter.formatOnPaste": {
          "type": "boolean",
          "default": true,
          "description": "Format Tailwind classes when pasting"
        },
        "tailwindFormatter.closeQuoteOnNewLine": {
          "type": "boolean",
          "default": true,
          "description": "Place the closing quote of the class attribute on a new line"
        },
        "tailwindFormatter.maxLineWidth": {
          "type": "number",
          "default": 80,
          "description": "Maximum line width before breaking classes into multiple lines (0 = no limit)"
        },
        "tailwindFormatter.wrapIndentStyle": {
          "type": "string",
          "enum": ["same", "extra"],
          "default": "same",
          "enumDescriptions": [
            "Continued lines have the same indentation",
            "Continued lines have 2 extra spaces"
          ],
          "description": "Indentation style for split lines"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
